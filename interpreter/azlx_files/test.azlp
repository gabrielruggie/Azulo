// my_project.mm //
// Allocations freeze when this program runs //
// strict does not allow category budgets to be affected by `reallocate` //
// strict also does not allow funds to be moved from any category that uses it //
module project my_project {
	set budget 600
	set duration 31
	set strict false
}

module category groceries {
	set budget_allocation 0.25
	set strict true // immutability //
}

module category clothes {
	set budget_allocation 0.1
	set strict false
}

module report default {
	set always_run true
	get category groceries remaining_budget
	get category ALL remaining_budget

	get category ALL allocation_amounts

	get project this remaining_budget 
	get project this burndown
} 
